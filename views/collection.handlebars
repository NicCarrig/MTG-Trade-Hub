 <h2>Add a Card to Your Inventory</h2>
  <form class="card-search-form">
    <div>
      <label for="card-name">Card Name</label>
      <input type="text" id="card-name" name="card-name" />
    </div>
    <button type="submit" class="btn">Search</button>
  </form>
</section>

{{#if cardArr.length}}
<div class="card-search-container">
    <ul>
      <li>butts</li>
      {{#each cardArr}}
      <li>{{cardArr.name}}</li>
      {{/each}}
    </ul>
</div>
{{/if}}

{{#if cards.length}}
<section class="user-collection">
  <h2>{{cards.0.user.username}}'s Inventory</h2>
  <div class="card-wrapper">
    {{#each cards as |card|}}
    <div class="card-container">
      <img src="{{img_uri}}" alt="image of {{card_name}}">
      <button type="button" class="remove-card-btn" data-id="{{id}}">Remove card</button>
      {{card_name}}
    </div>
    {{/each}}
  </div> 
</section>
{{/if}}




<script src="/javascript/search-card.js"></script>
<script src="/javascript/remove-card.js"></script>